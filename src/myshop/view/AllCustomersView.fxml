<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="480.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myshop.view.AllCustomerViewController">
   <top>
      <Label text="Customers" BorderPane.alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </top>
   <center>
      <TableView fx:id="table" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="nameColumn" style="-fx-alignment: CENTER;" text="Name" />
          <TableColumn fx:id="primaryMobileNoColumn" prefWidth="108.0" style="-fx-alignment: CENTER;" text="Mobile No. (Primary)" />
          <TableColumn fx:id="secondaryMobileNoColumn" prefWidth="91.0" style="-fx-alignment: CENTER;" text="Mobile No. " />
          <TableColumn fx:id="landLineColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Landline" />
          <TableColumn fx:id="emailColumn" prefWidth="75.0" style="-fx-alignment: CENTER;" text="Email" />
            <TableColumn fx:id="nicNoColumn" prefWidth="75.0" text="NIC No." />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
